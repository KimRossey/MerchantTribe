@{
    Layout = null;
}
@model MerchantTribeStore.Models.ProductReviewsViewModel
@if (Model.Reviews.Count > 0)
{        
    <div class="ProductReviewRating">
         @ViewBag.AvgLabel <img src="@ViewBag.AvgImage" alt="Average Rating @ViewBag.Avg" />        
    </div>
    foreach (var review in Model.Reviews)
    {
        @Html.Partial("~/Views/ProductReviews/_SingleReview.cshtml", review)
    }    
    <div class="clear"></div>
}
    
