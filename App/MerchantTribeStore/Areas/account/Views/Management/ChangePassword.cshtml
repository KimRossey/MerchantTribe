@{    
    Layout = "~/Areas/account/Views/Shared/_AccountLayout.cshtml";
}
<h1>Change Password</h1>
@Html.Raw((string)TempData["messages"])
<form action="@Url.Content("~/account/management/changepassword")" method="post">
<table class="formtable">
<tr>
    <td class="formlabel">Current Password:</td>
    <td class="formfield"><input type="password" id="currentpasswordfield" name="currentpasswordfield" size="50" /></td>
</tr>
<tr>
    <td class="formlabel">New Password:</td>
    <td class="formfield"><input type="password" id="newpasswordfield" name="newpasswordfield" size="50" /></td>
</tr>
<tr>
    <td class="formlabel"><a href="@Url.Content("~/account")">Cancel</a></td>
    <td class="formfield"><input type="image" src="@ViewBag.SaveButtonUrl" alt="Save Changes" /></td>
</tr>
</table>
</form>

